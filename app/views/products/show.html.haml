- model_class = Product
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @product.name
%p
  %strong= model_class.human_attribute_name(:number) + ':'
  %br
  = @product.number
%p
  %strong= model_class.human_attribute_name(:count) + ':'
  %br
  = @product.count
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @product.user_id
%p
  %strong= model_class.human_attribute_name(:status) + ':'
  %br
  = @product.status
%p
  %strong= model_class.human_attribute_name(:position) + ':'
  %br
  = @product.position
%p
  %strong= model_class.human_attribute_name(:date) + ':'
  %br
  = @product.date


= link_to t('.back', :default => t("helpers.links.back")), products_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_product_path(@product), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), product_path(@product), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
