.container
  .row.first-row
    .span8
      %h3 My Team
    .span4{style: 'padding-top: 20px;'}
      = link_to "Add New Team Member", new_admin_account_path, class: 'btn btn-primary'
  .row.customers-contents
    %table.table.table-striped.table-hover.table-bordered
      %thead
        %tr
          %th Name
          %th User Name
          %th User Type
          %th Actions
      %tbody
        - @members.each do |member|
          - if member.email != 'dannyconchuiner@cop.net'
            %tr
              %td= member.name
              %td= member.email
              %td= member.role
              %td
                = link_to(edit_admin_account_path(member), class: 'btn btn-mini') do
                  %i.icon-pencil

                = link_to(admin_account_path(member), class: 'btn btn-mini', method: :delete, data: {confirm: "Are you sure"}) do
                  %i.icon-trash
