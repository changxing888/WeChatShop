#order_state_code_wrapper
  - parent_region ||= params[:parent_region]
  - country = Carmen::Country.coded(parent_region)
  - if country.nil?
    %em Please select a country
  - elsif country.subregions?
    = subregion_select(:order, :state_code, parent_region, prompt: "Select State")
  - else
    = text_field(:order, :state_code)